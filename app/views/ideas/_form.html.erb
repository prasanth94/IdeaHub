<div class="form">
  <div class="col-md-6 col-md-offset-3">
    <% if @idea.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this cart from being saved:</h2>

          <ul>
            <% @idea.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>

     <% end %>

    <%= form_for(@idea, url: url, method: method) do |f| %>

    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  
    <%= label_tag 'tags' %><br>
    <% if f.object.persisted? %>
      <%= text_area_tag(:tags, f.object.tags.map(&:name).join(",")) %>
    <% else %>
      <%= text_area_tag 'tags' %>
    <% end %>
    <label>Enter the tags seperated by commas</label><br>

    <%= f.submit "Submit", class: "btn btn-primary"  %>

  <% end %>
</div>
</div>

