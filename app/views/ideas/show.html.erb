<div class = "show_idea">
<table class="table">
    <thead class="thead-default">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Tags</th>
      </tr>
    </thead>
    <tr>
      <td><%= @idea.title %></td>
      <td><%= @idea.description %></td>
      <td><%= @idea.tags.map(&:name).join(",") %></td>
    </tr>
</table>
<%= link_to "Ideas", user_ideas_path(@user), class: 'btn btn-primary' %>
</div>
